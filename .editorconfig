# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# See https://editorconfig.org for more information.

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Zig source files
[*.zig]
indent_style = space
indent_size = 4
max_line_length = 100

# Build files and configuration
[{*.zig,build.zig.zon}]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown files
[*.md]
max_line_length = 78
trim_trailing_whitespace = false  # Preserve trailing spaces for line breaks

# Man pages (mdoc format)
[*.1]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# YAML files (Docker Compose, CI)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4